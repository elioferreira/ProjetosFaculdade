#include <stdio.h>

int main() {
    int opcao, quantidade, idade;
    float valor_total = 0;
    float valor_ingresso = 30.50;

    printf("Escolha uma das opções de filme:\n");
    printf("1: A Baleia\n");
    printf("2: Avatar: O caminho da água\n");
    printf("3: Tár\n");
    printf("4: Nada de Novo no Front\n");
    scanf("%d", &opcao);

    printf("Quantos ingressos você deseja comprar?\n");
    scanf("%d", &quantidade);

    for (int i = 0; i < quantidade; i++) {
        printf("Digite a idade do %dº ingresso:\n", i + 1);
        scanf("%d", &idade);
        if (idade < 10 || idade > 65) {
            valor_total += valor_ingresso / 2;
        } else {
            valor_total += valor_ingresso;
        }
    }

    switch (opcao) {
        case 1:
            printf("Filme escolhido: A Baleia\n");
            break;
        case 2:
            printf("Filme escolhido: Avatar: O caminho da água\n");
            break;
        case 3:
            printf("Filme escolhido: Tár\n");
            break;
        case 4:
            printf("Filme escolhido: Nada de Novo no Front\n");
            break;
        default:
            printf("Opção inválida.\n");
            return 0;
    }

    printf("Valor total da compra: R$ %.2f\n", valor_total);

    return 0;
}
